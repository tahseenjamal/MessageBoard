<h3><%= @message.title %></h3>
<h5 style="padding-bottom: 0px"><%= @message.description %></h5>
<h5>Created at: <%= time_ago_in_words(@message.created_at) %></h5>


<p>

<% if user_signed_in? %>

	<% if @message.user_id == current_user.id %>
	    
		<div style="float: left; width: auto; padding-right: 10px">
			 <%= button_to "Edit", edit_message_path(@message), class: "btn btn-default", :method => :get  %>
		</div>

		<div style="float: left; width: auto; padding-right: 10px">
			<%= link_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default"  %>
		</div>

	<% end %>

<% end %>

	<div>
		<%= link_to "Home", messages_path, class: "btn btn-default"  %>
	</div>

</p>


<!-- Previous comments to be placed here -->
<%= render @message.comments %>

<!-- Some gap -->

<h5 style="padding-top: 50px">Reply to Message:</h5>
<%= render "comments/form" %>



